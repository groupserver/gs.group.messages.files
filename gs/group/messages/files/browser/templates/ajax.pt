<div class="gs-search-results">
  <tal:block repeat="file view/files">
    <div class="gs-search-result hmedia">
      <img tal:condition="file/isImage" class="photo"
           tal:attributes="src string:${file/imgUrl}/36/36" />
      <div class="fn">
        <a href="#" tal:content="file/name"
           tal:attributes="href file/url; type file/mime_type">Name</a>
      </div>
      <div class="muted">
        <a href="#" 
           tal:attributes="href file/postUrl">Posted in 
        <em tal:content="file/subject">Topic</em></a>
      </div>
    </div>
  </tal:block>
</div><!--gs-search-results-->